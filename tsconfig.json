{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2019",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./built",
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}